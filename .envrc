#!/usr/bin/env bash
# direnv file to load the flake's devShell
# This will call `use flake` which instructs direnv to enter the Nix flake dev shell

if [ -f flake.nix ]; then
  if command -v nix >/dev/null 2>&1; then
    # Let direnv/nix handle selecting the appropriate devShell from the flake.
    # This will pick the devShell for the current system.
    use flake
  else
    echo "[envrc] nix not found: install Nix or enable flakes to load flake.nix devShell"
  fi
else
  echo "[envrc] no flake.nix found in project root; skipping flake dev shell"
fi
